<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="agent">
    <class name="domain.Produs"
           table="Produse">
        <id name="id" column="id" type="java.lang.Integer">
            <generator class="increment"/>
        </id>
        <property
                name="nume"
                column="nume" type="java.lang.String"/>
        <property
                name="pret"
                column="pret" type="java.lang.Integer"/>
        <property
                name="cantitate"
                column="cantitate" type="java.lang.Integer"/>
    </class>
</hibernate-mapping>